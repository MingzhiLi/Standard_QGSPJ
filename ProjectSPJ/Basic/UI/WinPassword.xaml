<Window x:Class="ProjectSPJ.WinPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectSPJ"
        mc:Ignorable="d"
        Title=" " Height="150" Width="350" KeyDown="Window_KeyDown" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Name="lbInfo" HorizontalAlignment="Right" VerticalAlignment="Center">请输入密码：</Label>
        <PasswordBox x:Name="PWB" PasswordChar="*" Grid.Column="1" Margin="10" VerticalContentAlignment="Center"></PasswordBox>
        <Button Name="BtnConfirm" Grid.Row="1" Grid.ColumnSpan="2" FontSize="25" Width="180" Height="40" Click="BtnConfirm_Click">确       认</Button>
    </Grid>
</Window>
